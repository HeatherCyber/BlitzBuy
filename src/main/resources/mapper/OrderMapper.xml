<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blitzbuy.mapper.OrderMapper">

    <resultMap id="orderResultMap" type="com.example.blitzbuy.pojo.Order">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="deliveryAddress" column="delivery_address"/>
        <result property="goodsName" column="goods_name"/>
        <result property="goodsCount" column="goods_count"/>
        <result property="goodsPrice" column="goods_price"/>
        <result property="orderChannel" column="order_channel"/>
        <result property="orderStatus" column="order_status"/>
        <result property="createTime" column="create_time"/>
        <result property="payTime" column="pay_time"/>
    </resultMap>

    <!-- Query order
    <select id="selectById" resultMap="orderResultMap">
        SELECT * FROM `order` WHERE id = #{id}
    </select>-->

    <!-- Insert order 
    <insert id="insert" parameterType="com.example.blitzbuy.pojo.Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `order` (user_id, goods_id, delivery_address, goods_name, goods_count, goods_price, order_channel, order_status, create_time, pay_time)
        VALUES (#{userId}, #{goodsId}, #{deliveryAddress}, #{goodsName}, #{goodsCount}, #{goodsPrice}, #{orderChannel}, #{orderStatus}, #{createTime}, #{payTime})
    </insert>-->

    <!-- Update order status 
    <update id="updateById" parameterType="com.example.blitzbuy.pojo.Order">
        UPDATE `order`
        <set>
            <if test="orderStatus != null">order_status = #{orderStatus},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
        </set>
        WHERE id = #{id}
    </update> -->

</mapper> 